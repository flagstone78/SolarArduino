#ifndef ABSENCODER_HPP_
#define ABSENCODER_HPP_

#include "stm32f4xx_hal.h"

class absEncoder {
	const GPIO_TypeDef const* ports[10];
	const uint8_t pins[10];
public:
	absEncoder(GPIO_TypeDef* gpioPorts[10], uint8_t gpioPins[10]);
	virtual ~absEncoder();
	uint16_t position();
};

#endif /* ABSENCODER_HPP_ */
