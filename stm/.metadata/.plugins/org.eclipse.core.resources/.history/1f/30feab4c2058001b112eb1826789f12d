#include "maincpp.h"

TIM_HandleTypeDef htim1;

//encoders
absEncoder elEncoder(ElEncoderPorts,ElEncoderPins, true, 3.165);

//motors
Stepper elStepper(ElStepperPorts,ElStepperPins, true);

// callback function for stepper motor timer
void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
  if (htim == &htim1)
  {
	  elStepper.update();
  }
}

int currentpos;
float pos, oldpos, targetAngle;
void mainsetup(){
	elStepper.setFreq(100);
	currentpos = 0;
	oldpos = 0;
	pos=0;
	targetAngle = 45.0;
}

void mainloop(){
	pos = elEncoder.position(); //get encoder angle position
	currentpos = elStepper.getPosition(); //get motor step position
	if(pos<targetAngle)elStepper.setTarget(currentpos+1);
	else elStepper.setTarget(currentpos-1);
}
